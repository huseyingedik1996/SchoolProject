@model ApiClassListModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Class Name</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ClassName</td>
                    <td>
                        <form action="@Url.Action("Delete", "Class", new { id = item.Id })" method="post">
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Class", new { id = item.Id })" class="btn btn-primary">Güncelle</a>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="4" class="text-left">
                    <a href="@Url.Action("CreateClass", "Class")" class="btn btn-lg btn-success"
                       onmouseover="this.classList.remove('btn-success'); this.classList.add('btn-secondary');"
                       onmouseout="this.classList.remove('btn-secondary'); this.classList.add('btn-success');">
                        Sınıf Ekle
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
