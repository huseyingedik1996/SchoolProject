@model StudentCreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
	.btn-container {
		position:absolute;
		bottom: 0;
		right: 0;
		margin-bottom: 100px; /* Optional: Add some margin to the bottom */
		margin-right: 200px; /* Optional: Add some margin to the right */
	}
</style>


<div id="oppositeFormTable" class="col-md-12">
	<form method="post">
		<div class="card-header">
			<div class="card-title">Yeni Öğrenci Girişi</div>
		</div>
		<div class="card-body">
			<div class="form-group">
				<label for="Name">Ad</label>
				<input type="text" asp-for="Name" class="form-control" id="Name">
				<span asp-validation-for="Name" class="text-danger"></span>

				<label for="Surname">Soyad</label>
				<input type="text" asp-for="Surname" class="form-control" id="Surname">
				<span asp-validation-for="Surname" class="text-danger"></span>

				<label for="TCNumber">Tc No</label>
				<input type="text" asp-for="TCNumber" class="form-control" id="TCNumber">
				<span asp-validation-for="TCNumber" class="text-danger"></span>

				<label for="Adress">Adres</label>
				<input type="text" asp-for="Address" class="form-control" id="Adress">
				<span asp-validation-for="Address" class="text-danger"></span>

				<label for="City">Şehir</label>
				<input type="text" asp-for="City" class="form-control" id="City">
				<span asp-validation-for="City" class="text-danger"></span>

				<label for="Region">Ülke</label>
				<input type="text" asp-for="Region" class="form-control" id="Region">
				<span asp-validation-for="Region" class="text-danger"></span>

				<label for="Birthday">Doğumgünü</label>
				<input type="date" asp-for="BirthDay" class="form-control" id="Bİrthday">
				<span asp-validation-for="BirthDay" class="text-danger"></span>

				<label for="Contact">İletişim</label>
				<input type="text" asp-for="Contact" class="form-control" id="Contact">
				<span asp-validation-for="Contact" class="text-danger"></span>

				

			</div>
		</div>
		<div class="btn-container">
			<td colspan="4" class="text-left">
				<button type="submit" class="btn btn-primary">İleri</button>
			</td>
		</div>
	</form>
</div>

